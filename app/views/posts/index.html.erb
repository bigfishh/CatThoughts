<div class="columns">
  <div class="column">
    <!-- Start -->
    <div class="box" style="margin-top: 10%;">
        <% if @current_user %>
            <span style='margin-left: 10%'>
                    <a class="is-size-7" href="/posts"> 🏠Home </a> | 
                    <a class="is-size-7" href="/posts/new"> 💻New Post </a> |
                    <span class="is-size-7"> <%= link_to "😸Profile", user_path(@current_user.id) %> |
                    <a class="is-size-7" rel="nofollow" data-method="delete" href="/logout"> 🚪Logout </a>
            </span>
        <% else %>
          <span style="margin-left: 20%">
            🐱
            <a class="is-normal" href=/login > Log in </a> or
            <a class="is-normal" href=/signup > Sign up </a>
            🐱
          </span>
        <% end %>
    </div>
    <div class="box">
      <%= render :partial => 'form' %>
    </div>
    <!-- End -->
  </div>

  <div class="column is-8">
    <!-- Start -->
    <div class="box" style="margin-top: 2%; max-height: 96vh; overflow: scroll;">
    <h4 class="title is-4 is-spaced" style="margin-left:35%;">thoughts shared 💭</h4>
    <% @posts.each do |post|%>
      <article class="media">
        <figure class="image media-left is-64x64">
            <img class="is-rounded" src= <%= post.user.img_url %> alt="<%= post.user.name %>">
        </figure>
        <div class="media-content">
          <div class="content">
              <strong>
                <%= post.user.name %>
              </strong> 
              <small>
                @<%= post.user.username %>
                <br/>
                <%= post.created_at.strftime("%m-%d-%Y")%>
              </small> 
              <br>
              <span style="margin-left: 2%">
                <%= post.content %>
              </span>
          </div>
          <span class="is-size-7">
                <% if post.likes.count > 0 %> 
                  💕by 
                  <% post.liked_users.each do |user|%>
                      <%= user.username %>
                  <% end %>
                <% end %>
          </span><br/>
          <% if post.user.id != @current_user%>
              <small class="is-size-7">
                <% if post.liked_users.include?(@current_user)%>
                    <%= link_to "Unlike", like_path(post.id), method: :delete %> ·
                <% elsif post.user == @current_user %>
                <% else %>
                    <%= link_to "Like", post_likes_path(post.id), method: :post%> ·
                <% end %>
              </small>  
          <% end %>

          <small class="is-size-7">
            <% if  post.comments.count > 0 %>
              <%= post.comments.size %> comments
            <% else %>
              0 comments
            <% end %>
          </small> ·
        <small class="is-size-7"><%= link_to "View", post_path(post.id)%></small>
        </div>
        <div class="media-right">
              <div class="level-right">
                    <p class="level-item">
                    <% if post.user == @current_user %>
                      <div class="navbar-item has-dropdown is-hoverable">
                        <a class="navbar-link is-arrowless">
                          🐾
                        </a>
                        <div class="navbar-dropdown">
                          <a class="navbar-item">
                            <%= link_to "Edit", edit_post_path(post.id)%>
                          </a>
                          <a class="navbar-item">
                            <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" }%>
                          </a>
                        </div>
                      </div>
                      <% end %>
                    </p>
                  </div>
      </article>
    <%end%>
    </div>
    <!-- End -->
  </div>
</div>
    
