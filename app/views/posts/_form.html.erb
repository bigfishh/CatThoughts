
<%= form_for @post do |f| %>
    <div class="field">
      <label class="label">Location</label>
      <div class="control">
        <div class="select">
            <%= f.collection_select :location_id, Location.all, :id, :name %><br/>
        </div>
      </div>
    </div>
    <br/>
    <div class="field">
      <label class="label">Message</label>
      <div class="control">
        <textarea name="post[content]" id="post_content" class="textarea" placeholder="write a meow"></textarea>
      </div>
    </div>
    <button class="button is-info is-rounded is-small">
      <span type="submit" name="commit" value="Create" data-disable-with="Create Post">meow</span>
    </button>
<% end %>